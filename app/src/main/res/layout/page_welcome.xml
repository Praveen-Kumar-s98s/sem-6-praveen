<?xml version="1.0" encoding="utf-8"?>
<!-- Page 1: Welcome/Splash -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/oled_black"
    android:id="@+id/welcomeRoot">

    <!-- Shield Icon (Subtle) -->
    <ImageView
        android:id="@+id/shieldLogo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@android:drawable/ic_secure"
        android:alpha="0.3"
        app:tint="@color/cyber_cyan"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="120dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/welcomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SENTINEL X"
        android:textColor="@color/text_primary"
        android:textSize="42sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"
        android:letterSpacing="0.15"
        app:layout_constraintTop_toBottomOf="@id/shieldLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/welcomeSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digital Scam Protection"
        android:textColor="@color/cyber_cyan"
        android:textSize="16sp"
        android:fontFamily="sans-serif-light"
        android:letterSpacing="0.1"
        app:layout_constraintTop_toBottomOf="@id/welcomeTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Decorative Line -->
    <View
        android:id="@+id/decorLine"
        android:layout_width="120dp"
        android:layout_height="1dp"
        android:background="@color/cyber_cyan"
        android:alpha="0.5"
        app:layout_constraintTop_toBottomOf="@id/welcomeSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp" />

    <!-- Description -->
    <TextView
        android:id="@+id/welcomeDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Behavioral AI that detects social engineering attacks in real-time. No data leaves your device."
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.4"
        android:paddingHorizontal="48dp"
        app:layout_constraintTop_toBottomOf="@id/decorLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Swipe Hint -->
    <TextView
        android:id="@+id/swipeHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SWIPE TO BEGIN â†’"
        android:textColor="@color/text_muted"
        android:textSize="12sp"
        android:letterSpacing="0.2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="100dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

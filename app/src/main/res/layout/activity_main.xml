<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SENTINEL X"
        android:textColor="#00FF41"
        android:textSize="32sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/shieldCard"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cardBackgroundColor="#000000"
        app:cardCornerRadius="100dp"
        app:strokeColor="#00FF41"
        app:strokeWidth="2dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="64dp">

        <ImageView
            android:id="@+id/shieldIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_secure"
            app:tint="#00FF41" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SYSTEM ARMED"
        android:textColor="#00FF41"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        android:fontFamily="monospace"
        app:layout_constraintTop_toBottomOf="@id/shieldCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnToggle"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="ENABLED"
        android:backgroundTint="#00FF41"
        android:textColor="#000000"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
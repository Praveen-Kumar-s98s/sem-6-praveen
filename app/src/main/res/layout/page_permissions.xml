<?xml version="1.0" encoding="utf-8"?>
<!-- Page 3: Permissions Setup -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/oled_black"
    android:id="@+id/permissionsRoot">

    <!-- Header -->
    <TextView
        android:id="@+id/permTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SYSTEM ACCESS"
        android:textColor="@color/text_primary"
        android:textSize="24sp"
        android:fontFamily="sans-serif-light"
        android:letterSpacing="0.15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp" />

    <TextView
        android:id="@+id/permSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Required for protection"
        android:textColor="@color/text_muted"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/permTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Permission Cards -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/permSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp">

        <!-- Accessibility Permission -->
        <LinearLayout
            android:id="@+id/permAccessibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:background="@drawable/perm_card_bg"
            android:layout_marginBottom="16dp">

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/pulsing_dot" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accessibility Service"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monitor app behavior patterns"
                    android:textColor="@color/text_muted"
                    android:textSize="11sp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/accessibilityStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ENABLE"
                android:textColor="@color/cyber_cyan"
                android:textSize="12sp"
                android:letterSpacing="0.1" />

        </LinearLayout>

        <!-- Overlay Permission -->
        <LinearLayout
            android:id="@+id/permOverlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:background="@drawable/perm_card_bg"
            android:layout_marginBottom="16dp">

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/pulsing_dot" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Display Over Apps"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show warning overlays"
                    android:textColor="@color/text_muted"
                    android:textSize="11sp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/overlayStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ENABLE"
                android:textColor="@color/cyber_cyan"
                android:textSize="12sp"
                android:letterSpacing="0.1" />

        </LinearLayout>

    </LinearLayout>

    <!-- Note -->
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sentinel X never reads your messages or records calls. All analysis happens locally on your device."
        android:textColor="@color/text_muted"
        android:textSize="11sp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.3"
        android:paddingHorizontal="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="100dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
